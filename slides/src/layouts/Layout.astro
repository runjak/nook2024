---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Slides fÃ¼r den Talk 'Malen nach Zahlen' auf der Nook 2024"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  :root {
    --accent: 0, 99, 96; /* #006360 */
    --accent-light: 255, 244, 117; /* #fff475 */
    --accent-dark: 0, 35, 34; /* #002322 */
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }

  html {
    height: 100%;
    font-family: system-ui, sans-serif;
    font-weight: 400;
    background: #002322;
  }

  body {
    height: 100%;
    margin: 0;
    padding: 0;
  }

  body * {
    font-size: 40px;
  }

  h1,
  h1 * {
    font-size: 101.28px;
    line-height: 1;
    text-align: center;
    margin-top: 0;
    margin-bottom: 20px;
  }

  h2 {
    font-size: 62px;
    line-height: 1;
    margin: 20px 0px;
  }
</style>
