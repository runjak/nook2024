---
import fs from "fs";
import path from "path";

interface Props {
  file: string;
}

const { file } = Astro.props;

const pathToFile = path.join(process.cwd(), "src/glsl/", `${file}.glsl`);
const shaderCode = String(fs.readFileSync(pathToFile));
---

<canvas>{shaderCode}</canvas>

<style>
  canvas {
    border-radius: 7px;
    width: 100%;
  }
</style>
