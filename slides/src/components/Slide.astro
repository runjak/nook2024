---
import { slide } from "astro:transitions";

interface Props {}
---

<main transition:animate={slide({ duration: "0.4s" })}>
  <slot />
</main>

<style>
  main {
    margin: 2rem;
    padding: 2rem;
    max-width: calc(100% - 2rem);
    color: white;

    font-size: 20px;
    line-height: 1.6;

    background-color: #006360;
    border-radius: 7px;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
</style>
