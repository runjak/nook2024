---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Nook2024: Malen nach Zahlen">
  <main transition:animate="slide">
    <h1>Malen nach Zahlen</h1>
    <p>Could be a second slide?</p>
    <a href="/slides/1">Go to slide 1.</a>
  </main>
</Layout>

<style>
  main {
    margin: 2rem;
    padding: 2rem;
    max-width: calc(100% - 2rem);
    color: white;

    font-size: 20px;
    line-height: 1.6;

    background-color: #006360;
    border-radius: 7px;
  }
  h1 {
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
  }
  a {
    color: rgb(var(--accent-light));
  }
</style>
